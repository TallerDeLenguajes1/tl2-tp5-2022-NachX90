@{
    ViewData["Title"] = "Inicio";
}

            <h1>Bienvenido</h1>
            <form asp-controller="Cadetes" asp-action="ListadoDeCadetes" method="post">
                <div class="form-group row m-2">
                    <label for="user">Usuario</label>
                    <input name="user" type="text" placeholder="Ingrese el usuario" class="form-control" required/>
                </div>
                <div class="form-group row m-2">
                    <label for="pass">Contraseña</label>
                    <input name="pass" type="password" placeholder="Ingrese la contraseña" class="form-control" required />
                </div>
                <div class="form-group row m-2">
                    <input class="btn btn-primary mb-2" type="submit" value="Ingresar">
                </div>
            </form>
            <p class="text-lg-center">Este formulario no hace ningún control, solo redirecciona al listado de cadetes.</p>