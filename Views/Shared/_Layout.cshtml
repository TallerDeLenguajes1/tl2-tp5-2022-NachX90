@{
    @inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccesor
    var SesionId = @HttpContextAccesor.HttpContext.Session.GetInt32("Id");
    var SesionNombre = @HttpContextAccesor.HttpContext.Session.GetString("Nombre");
    var SesionUsuario = @HttpContextAccesor.HttpContext.Session.GetString("Usuario");
    var SesionIdRol = @HttpContextAccesor.HttpContext.Session.GetInt32("IdRol");
    var SesionRol = @HttpContextAccesor.HttpContext.Session.GetString("Rol");

    ViewData["Empresa"] = "La Escaloneta";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - @ViewData["Empresa"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CadeteriaMVC.styles.css" asp-append-version="true" />
</head>
<body class="bg-light bg-gradient">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-info bg-gradient border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand fs-3 text" asp-area="" asp-controller="Inicio" asp-action="Index"><img class="mx-3" height="70" src="~/img/logo.png" alt="" /><strong>@ViewData["Empresa"]</strong></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Inicio" asp-action="Index">Inicio</a>
                        </li>
@{
    if (SesionIdRol == 1) // es admin
    {
                        <li class="nav-item dropdown">
                            <a class="nav-link text-white dropdown-toggle" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">Cadetes</a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <li>
                                    <a class="dropdown-item text-dark" asp-area="" asp-controller="Cadetes" asp-action="ListadoDeCadetes">Listado de cadetes</a>
                                </li>
                                <li>
                                    <a class="dropdown-item text-dark" asp-area="" asp-controller="Cadetes" asp-action="CrearCadete">Crear nuevo cadete</a>
                                </li>
                            </ul>
                        </li>
    }
    if (SesionIdRol == 1 || SesionIdRol == 2) // es admin o vendedor
    {
                        <li class="nav-item dropdown">
                            <a class="nav-link text-white dropdown-toggle" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">Clientes</a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <li>
                                    <a class="dropdown-item text-dark" asp-area="" asp-controller="Clientes" asp-action="ListadoDeClientes">Listado de clientes</a>
                                </li>
                                <li>
                                    <a class="dropdown-item text-dark" asp-area="" asp-controller="Clientes" asp-action="CrearCliente">Crear nuevo cliente</a>
                                </li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link text-white dropdown-toggle" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">Pedidos</a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <li>
                                    <a class="dropdown-item text-dark" asp-area="" asp-controller="Pedidos" asp-action="ListadoDePedidos">Listado de pedidos</a>
                                </li>
                                <li>
                                    <a class="dropdown-item text-dark" asp-area="" asp-controller="Pedidos" asp-action="CrearPedido">Crear nuevo pedido</a>
                                </li>
                            </ul>
                        </li>
    }
    if (SesionIdRol == 3) // es cadete
    {
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Pedidos" asp-action="ListarPorCadete" asp-route-id="@SesionId">Pedidos</a>
                        </li>
    }
    if (SesionIdRol == 1 || SesionIdRol == 2 || SesionIdRol == 3) // es admin o vendedor o cadete
    {
                        <li class="nav-item dropdown">
                            <a class="nav-link text-white dropdown-toggle" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">@SesionUsuario</a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <li>
                                    <a class="dropdown-item text-dark" asp-area="" asp-controller="Inicio" asp-action="Salir">Salir</a>
                                </li>
                            </ul>
                        </li>                            
    }
}
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top box-shadow mt-3 footer text-white bg-info bg-gradient">
        <div class="container">
            &copy; 2022 - @ViewData["Empresa"] - <a asp-area="" asp-controller="Inicio" asp-action="Privacidad" class="text-white">Privacidad</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
