@model CadeteriaMVC.ViewModels.Cadetes.ListadoDeCadetesVM
@{
    ViewData["Title"] = "Listado de Cadetes";
}

            <h1>Listado de cadetes</h1>
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th scope="col">@Html.DisplayNameFor(Model => Model.ListaDeCadetesVM.First().Id)</th>
                        <th scope="col">@Html.DisplayNameFor(Model => Model.ListaDeCadetesVM.First().Nombre)</th>
                        <th scope="col">@Html.DisplayNameFor(Model => Model.ListaDeCadetesVM.First().Direccion)</th>
                        <th scope="col">@Html.DisplayNameFor(Model => Model.ListaDeCadetesVM.First().Telefono)</th>
                        <th scope="col">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var Cadete in Model.ListaDeCadetesVM)
                    {
                    <tr>
                        <th scope="row" class="align-middle">@Cadete.Id</th>
                        <td class="align-middle">@Cadete.Nombre</td>
                        <td class="align-middle">@Cadete.Direccion</td>
                        <td class="align-middle">@Cadete.Telefono</td>
                        <td class="align-middle">
                            <a class="btn btn-primary btn-sm my-1" asp-controller="Pedidos" asp-action="ListarPorCadete" asp-route-id="@Cadete.Id">
                                <svg class="bi" width="18" height="18" fill="currentColor">
                                  <use xlink:href="../../bootstrap-icons/bootstrap-icons.svg#list-ul"/>
                                </svg>
                                Listar
                            </a>
                            <a class="btn btn-danger btn-sm my-1" asp-controller="Cadetes" asp-action="EditarCadete" asp-route-id="@Cadete.Id">
                                <svg class="bi" width="18" height="18" fill="currentColor">
                                  <use xlink:href="../../bootstrap-icons/bootstrap-icons.svg#pencil-fill"/>
                                </svg>
                                Editar
                            </a>
                            <a class="btn btn-danger btn-sm my-1" asp-controller="Cadetes" asp-action="EliminarCadete" asp-route-id="@Cadete.Id" onclick="    return confirm('¿Eliminar definitivamente? ¡Esta acción no se puede deshacer!');">
                                <svg class="bi" width="18" height="18" fill="currentColor">
                                  <use xlink:href="../../bootstrap-icons/bootstrap-icons.svg#trash-fill"/>
                                </svg>
                                Eliminar
                            </a>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
            