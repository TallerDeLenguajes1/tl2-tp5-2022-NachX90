@section Scripts { <partial name="_ValidationScriptsPartial" /> }
@model CadeteriaMVC.ViewModels.Cadetes.EditarCadeteVM;
@{
    ViewData["Title"] = "Editar cadete";
}
@if (TempData["Error"] != null)
{
    <script type="text/javascript">
        alert('@TempData["Error"]')
    </script>
}

            <h1>Editar cadete</h1>
            <form asp-controller="Cadetes" asp-action="EditarCadete" method="post">
                <input asp-for="Id" readonly hidden />
                <div class="form-group row m-2">
                    <label asp-for="@Model.Nombre"></label>
                    <input asp-for="@Model.Nombre" placeholder="Ingrese el nombre" class="form-control"/>
                    <span asp-validation-for="@Model.Nombre" class="alert-warning"></span>
                </div>
                <div class="form-group row m-2">
                    <label asp-for="@Model.Direccion"></label>
                    <input asp-for="@Model.Direccion" placeholder="Ingrese la dirección" class="form-control"/>
                    <span asp-validation-for="@Model.Direccion" class="alert-warning"></span>
                </div>
                <div class="form-group row m-2">
                    <label asp-for="@Model.Telefono"></label>
                    <input asp-for="@Model.Telefono" placeholder="Ingrese el teléfono" class="form-control"/>
                    <span asp-validation-for="@Model.Telefono" class="alert-warning"></span>
                </div>
                <div class="form-group row m-2">
                    <input class="btn btn-primary mb-2" type="submit" value="Editar cadete">
                    <a asp-controller="Cadetes" asp-action="ListadoDeCadetes" class="btn btn-primary mb-2">Cancelar</a>
                </div>
            </form>
