@section Scripts { <partial name="_ValidationScriptsPartial" /> }
@model CadeteriaMVC.ViewModels.Inicio.IngresarVM;
@{
    ViewData["Title"] = "Ingresar";
}
@if (TempData["Error"] != null)
{
    <script type="text/javascript">
        alert('@TempData["Error"]')
    </script>
}

            <h1>@ViewData["Title"]</h1>
            <form asp-controller="Inicio" asp-action="Ingresar" method="post">
                <div class="form-group row m-2">
                    <label asp-for="@Model.NickName"></label>
                    <input asp-for="@Model.NickName" placeholder="Ingrese el usuario" class="form-control" />
                    <span asp-validation-for="@Model.NickName" class="alert-warning"></span>
                </div>
                <div class="form-group row m-2">
                    <label asp-for="@Model.Contrasena"></label>
                    <input asp-for="@Model.Contrasena" placeholder="Ingrese la contraseña" class="form-control" />
                    <span asp-validation-for="@Model.Contrasena" class="alert-warning"></span>
                </div>
                <div class="form-group row m-2">
                    <input class="btn btn-primary mb-2" type="submit" value="Ingresar">
                    <input class="btn btn-primary mb-2" type="reset" value="Borrar">
                </div>
            </form>
            <table class="table table-hover">
