@{
    @section Scripts { <partial name="_ValidationScriptsPartial" /> }
    @model CadeteriaMVC.ViewModels.Pedidos.CrearPedidoVM;

    ViewData["Title"] = "Crear pedido";
}

            <h1 class="text-info">@ViewData["Title"]</h1>
            <form asp-controller="Pedidos" asp-action="CrearPedido" method="post">
                <div class="form-group row m-2">
                    <label asp-for="@Model.Descripcion"></label>
                    <input asp-for="@Model.Descripcion" placeholder="Ingrese el pedido" class="form-control"/>
                    <span asp-validation-for="@Model.Descripcion" class="alert-warning"></span>
                </div>
                <div class="form-group row m-2">
                    <label asp-for="@Model.IdCliente"></label>
                    <select asp-for="@Model.IdCliente" asp-items="@Model.ListaDeClientesVM" class="form-select">
                        <option value="">[Seleccione un cliente]</option>
                    </select>
                    <span asp-validation-for="@Model.IdCliente" class="alert-warning"></span>
                </div>
                <div class="form-group row m-2">
                    <input class="btn btn-info bg-gradient mb-2" type="submit" value="Crear pedido">
                    <a asp-controller="Pedidos" asp-action="ListadoDePedidos" class="btn btn-info bg-gradient mb-2">Cancelar</a>
                </div>
            </form>
