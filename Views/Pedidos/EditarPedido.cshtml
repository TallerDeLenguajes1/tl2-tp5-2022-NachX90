@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccesor
@section Scripts { <partial name="_ValidationScriptsPartial" /> }
@model CadeteriaMVC.ViewModels.Pedidos.EditarPedidoVM;
@{
    ViewData["Title"] = "Editar pedido";
}

            <h1>Editar pedido</h1>
            <form asp-controller="Pedidos" asp-action="EditarPedido" method="post">
                <input asp-for="@Model.Nro" readonly hidden />
                <input asp-for="@Model.IdCliente" readonly hidden />
                <div class="form-group row m-2">
                    <label asp-for="@Model.Obs"></label>
@{
    if (@HttpContextAccesor.HttpContext.Session.GetInt32("IdRol") == 3)
    {
                    <input asp-for="@Model.Obs" readonly class="form-control" />
    }
    if (@HttpContextAccesor.HttpContext.Session.GetInt32("IdRol") == 1)
    {
                    <input asp-for="@Model.Obs" placeholder="Ingrese las observaciones" class="form-control" />
    }
}
                    <span asp-validation-for="@Model.Obs" class="alert-warning"></span>
                </div>
                <div class="form-group row m-2">
                    <label asp-for="@Model.Cliente"></label>
                    <input asp-for="@Model.Cliente" readonly class="form-control "/>
                    <span asp-validation-for="@Model.Cliente" class="alert-warning"></span>
                </div>
                <div class="form-group row m-2">
                    <label asp-for="@Model.IdCadete"></label>
@{
    if (@HttpContextAccesor.HttpContext.Session.GetInt32("IdRol") == 3)
    {
                    <input asp-for="@Model.IdCadete" readonly class="form-control" />
    }
    if (@HttpContextAccesor.HttpContext.Session.GetInt32("IdRol") == 1)
    {
                    <select asp-for="@Model.IdCadete" asp-items="@Model.ListaDeCadetesVM" class="form-select">
                        <option value="">[Seleccione un cadete]</option>
                    </select>
    }
}
                    <span asp-validation-for="@Model.IdCadete" class="alert-warning"></span>
                </div>
                <div class="form-group row m-2">
                    <label asp-for="@Model.IdEstado"></label>
                    <select asp-for="@Model.IdEstado" asp-items="@Model.ListaDeEstadosVM" class="form-select"></select>
                    <span asp-validation-for="@Model.IdEstado" class="alert-warning"></span>
                </div>
                <div class="form-group row m-2">
                    <input class="btn btn-primary mb-2" type="submit" value="Editar pedido">
                    <a asp-controller="Pedidos" asp-action="ListadoDePedidos" class="btn btn-primary mb-2">Cancelar</a>
                </div>
            </form>