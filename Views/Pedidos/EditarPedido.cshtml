@section Scripts { <partial name="_ValidationScriptsPartial" /> }
@model CadeteriaMVC.ViewModels.PedidoViewModel;
@{
    ViewData["Title"] = "Editar pedido";
}

            <h1>Editar pedido</h1>
            <form asp-controller="Pedidos" asp-action="EditarPedido" method="post">
                <div class="form-group row m-2">
                    <label asp-for="@Model.Obs" class="col-form-label col-sm-1"></label>
                    <div class="col-sm-3">
                        <input asp-for="@Model.Obs" placeholder="Ingrese las observaciones" class="form-control"/>
                    </div>
                    <span asp-validation-for="@Model.Obs"></span>
                </div>
                <div class="form-group row m-2">
                    <label asp-for="@Model.Cliente" class="col-form-label col-sm-1"></label>
                    <div class="col-sm-3">
                        <input asp-for="@Model.Cliente" readonly class="form-control-plaintext"/>
                    </div>
                    <span asp-validation-for="@Model.Cliente"></span>
                </div>
                <div class="form-group row m-2">
                    <input class="btn btn-primary col-sm-2 m-1" type="submit" value="Editar pedido">
                    <input class="btn btn-primary col-sm-2 m-1" type="reset" value="Cancelar">
                </div>
            </form>