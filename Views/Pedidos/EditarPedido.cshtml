@section Scripts { <partial name="_ValidationScriptsPartial" /> }
@model CadeteriaMVC.ViewModels.PedidoViewModel;
@{
    ViewData["Title"] = "Editar pedido";
}

            <h1>Editar pedido</h1>
            <form asp-controller="Pedidos" asp-action="EditarPedido" method="post">
                <input asp-for="@Model.Nro" hidden />
                <div class="form-group row m-2">
                    <label asp-for="@Model.Obs"></label>
                    <input asp-for="@Model.Obs" placeholder="Ingrese las observaciones" class="form-control"/>
                    <span asp-validation-for="@Model.Obs" class="alert-warning"></span>
                </div>
                <div class="form-group row m-2">
                    <label asp-for="@Model.IdCliente"></label>
                    <input asp-for="@Model.IdCliente" readonly class="form-control"/>
                    <span asp-validation-for="@Model.IdCliente" class="alert-warning"></span>
                </div>
                <div class="form-group row m-2">
                    <label asp-for="@Model.IdCadete"></label>
                    <input asp-for="@Model.IdCadete" placeholder="Ingrese el cadete" class="form-control"/>
                    <span asp-validation-for="@Model.IdCadete" class="alert-warning"></span>
                </div>
                <div class="form-group row m-2">
                    <label asp-for="@Model.IdEstado"></label>
                    <select asp-for="@Model.IdEstado" class="form-select">
                        <option value="">[Estado]</option>
                        <option value="1">En espera</option>
                        <option value="2">Aprobado</option>
                        <option value="3">Rechazado</option>
                        <option value="4">Asignado</option>
                        <option value="5">Entregado</option>
                        <option value="6">Sin entregar</option>
                    </select>
                    <span asp-validation-for="@Model.IdEstado" class="alert-warning"></span>
                </div>
                <div class="form-group row m-2">
                    <input class="btn btn-primary mb-2" type="submit" value="Editar pedido">
                    <a asp-controller="Pedidos" asp-action="ListadoDePedidos" class="btn btn-primary mb-2">Cancelar</a>
                </div>
            </form>